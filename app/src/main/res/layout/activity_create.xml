<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#175b19"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:background="#175b19"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="studyup.projects.ggc.controllers.CreateActivity"
            android:background="#175b19"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/createLayout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f6f1f1"
                android:padding="1dp"
                android:layout_marginTop="38dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Profile: "
                    android:id="@+id/profile_title_label"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="john@ggc.edu"
                    android:ems="10"
                    android:id="@+id/username_value"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstNameLayout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f6f1f1"
                android:layout_marginTop="38dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/first_name_label"
                    android:id="@+id/first_name_label"
                    android:textColor="#100f0f"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="John"
                    android:ems="10"
                    android:id="@+id/first_name_value"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lastNameLayout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f6f1f1"
                android:padding="1dp"
                android:layout_marginTop="38dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/last_name_label"
                    android:id="@+id/lastNameLabel"
                    android:textColor="#100f0f" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Doe"
                    android:ems="10"
                    android:id="@+id/last_name_value"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passwordLayout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f6f1f1"
                android:padding="1dp"
                android:layout_marginTop="38dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Password: "
                    android:id="@+id/passwordTitleLabel"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="supersecret"
                    android:ems="10"
                    android:id="@+id/password_value"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/passwordVLayout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f6f1f1"
                android:padding="1dp"
                android:layout_marginTop="38dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Verify Password: "
                    android:id="@+id/passwordVTitleLabel"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="supersecret"
                    android:ems="10"
                    android:id="@+id/password_digest_value"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/institutionLayout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f6f1f1"
                android:padding="1dp"
                android:layout_marginTop="38dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/institutionLabel"
                    android:text="@string/institution_label"
                    android:textColor="#100f0f" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/institution_value"
                    android:hint="Georgia Gwinnett College"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/submit_account_button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
